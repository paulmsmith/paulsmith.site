{
  "name": "paulmsmith-static-site-template",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "^16.0.0"
  },
  "description": "The static site generator template repo",
  "keywords": [
    "paulmsmith",
    "11ty"
  ],
  "settings": {
    "cloudinary": {
      "sitename": "paulmsmith",
      "url": "https://res.cloudinary.com/paulmsmith/image/fetch"
    },
    "paths": {
      "assets": "/assets/",
      "images": "/assets/images/",
      "stylesheets": "/assets/stylesheets/"
    },
    "url": "https://paulsmith.site"
  },
  "author": "Paul Michael Smith",
  "license": "MIT",
  "homepage": "https://paulsmith.site",
  "repository": "github:paulmsmith/static-site",
  "bugs": "https://github.com/paulmsmith/static-site/issues",
  "scripts": {
    "prebuild": "rm -rf public",
    "build:files": "eleventy",
    "build:javascripts": "rollup --config rollup.config.js",
    "build:stylesheets": "npx sass src/assets/stylesheets:public/assets/stylesheets --load-path src",
    "build": "npm-run-all --serial prebuild build:*",
    "prewatch": "npm run build",
    "watch:styles": "npx sass src/assets/stylesheets:public/assets/stylesheets --watch --no-source-map --load-path src",
    "watch:files": "eleventy --serve --port=8000",
    "watch:javascripts": "rollup --config rollup.config.js --watch",
    "watch": "npm-run-all --parallel --race watch:*",
    "prestart": "npm run build",
    "start": "NODE_ENV=development npm run watch"
  },
  "dependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-navigation": "^0.3.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@allmarkedup/nunjucks-with": "^0.1.2",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "accessible-autocomplete": "^2.0.3",
    "chokidar-cli": "^3.0.0",
    "deepmerge": "^4.2.2",
    "http-server": "^14.0.0",
    "javascript-stringify": "^2.1.0",
    "lodash": "^4.17.21",
    "luxon": "^2.0.1",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^8.1.2",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-ins": "^3.0.1",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "markdown-it-table-of-contents": "^0.6.0",
    "netlify-cms": "^2.10.183",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.43.0",
    "sass": "^1.45.1",
    "sass-mq": "^6.0.0"
  },
  "devDependencies": {
    "standard": "^16.0.3"
  },
  "standard": {
    "ignore": [
      "!.eleventy.js"
    ]
  }
}
