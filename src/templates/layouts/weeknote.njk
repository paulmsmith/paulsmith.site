{%- set currentPost = collections.weeknotes | getCollectionItem(page) -%}
{%- set previousPost = collections.weeknotes | getNextCollectionItem(page) -%}
{%- set nextPost = collections.weeknotes | getPreviousCollectionItem(page) -%}
{% set currentLayout = 'weeknote' %}
{% set prosemodifier = 'weeknotes' %}

{% extends "layouts/post.njk" %}

{% block section_head %}
<div class="c-sectionhead c-sectionhead--weeknote">
  <h1 class="c-sectionhead__heading-1">
    <div class="c-sectionhead__strapline">
       Weeknotes <span aria-hidden="true">&nbsp;
    </div>
    {{ page.date | weekdate | date('cccc dd MMM') }} -
    {{ page.date | weekdate(true) | date('cccc dd MMM') }} {{ page.date | date('yyyy') }}
  </h1>
  <p class="c-sectionhead__note">
    <abbr title="Season {{ weeknote.season }}, Episode {{ weeknote.episode }}">S{{ weeknote.season | padstart(2) }}E{{ weeknote.episode | padstart(2) }}</abbr>
  </p>
</div>
{% endblock %}
