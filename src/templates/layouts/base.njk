{%- import "../macros.njk" as macro -%}
{% set htmlClasses = '' %}
<!DOCTYPE html>
<html lang="en" class="{{ htmlClasses }}">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title }}</title>
    {% block head %}
      <link href="/assets/stylesheets/application.css" media="all" rel="stylesheet" type="text/css"/>
      {% block linktags %}{% endblock %}
      <meta property="og:title" content="{{ title }}">
      {% if description %}<meta property="og:description" name="description" content="{{ description | markdown("inline") | striptags(true) }}">{% endif %}
      <meta property="og:image" content="/assets/images/opengraph-image.png">
    {% endblock %}
  </head>
  <body>
    <a href="#page-body" class="l-skip-link">Skip to content</a>
    {% block masthead %}
      <div class="l-contain l-content-width">
        <header class="header header--global" id="page-header">
          <div class="header__content header__content--primary">
            <p>
              <a href="/"><img src="/assets/images/logo2.svg" alt="" style="width: 200px;"></a>
            </p>
            <nav class="header__nav">
              <ul class="header__nav-list">
                {# <li class="header__nav-list__item"><a href="/" class="header__nav-list__link">Home</a></li> #}
                <li class="header__nav-list__item"><a href="/about/" class="header__nav-list__link">About</a></li>
                <li class="header__nav-list__item"><a href="/writing/" class="header__nav-list__link">Writing</a></li>
                <li class="header__nav-list__item"><a href="/weeknotes/" class="header__nav-list__link">Weeknotes</a></li>
              </ul>
            </nav>
          </div>
          <div class="header__content header__content--secondary">
            <img src="/assets/images/paul.jpg" alt="" class="header__thumbnail">
          </div>
        </header>
      </div>
    {% endblock %}
    <main class="contain l-content-width" id="page-body">
      {% block section_head %}{% endblock %}
      {% block main %}
        {{ content | safe }}
      {% endblock %}
    </main>
    {% block footer %}
    <div class="l-contain l-content-width">
      <footer class="footer footer--global">
        <div class="footer__primary">
          <p class="u-mb-0">&copy; Paul Smith</p>
          <p class="u-mt-0">Hand coded in Manchester, England <img src="/assets/images/mcr_bee_paulsmith.svg" alt="Symbol of Manchester" class="u-icon u-icon--inline u-space u-space--left" width="30"></p>
        </div>
      </footer>
      <!-- /.footer--global -->
    </div>
    {% endblock %}
  </body>
  <!-- detect js -->
  <script id="detectJS">
    document.body.className = (
      (document.body.className)
      ? document.body.className + ' js-enabled'
      : 'js-enabled');
  </script>
  {%- if currentEnv == 'production' -%}
    <script async defer data-domain="paulsmith.site" src="https://loggychops.paulsmith.site/js/index.js"></script>
  {%- endif -%}
</html>
